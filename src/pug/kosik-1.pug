doctype html
include template/_variables.pug  
html(lang=lang)
    include template/_head.pug  
    body.cart
        include components/_modal-login.pug

        include components/_header.pug

        main
            section.cart-heading
                .container
                    .cart-heading__item.--active
                        .cart-heading__icon
                            img(src="/icons/cart-big.svg" alt="1. Nákupní košík")
                        .cart-heading__title 1. Nákupní košík
                    .cart-heading__item
                        .cart-heading__icon
                            img(src="/icons/car.svg" alt="2. Doprava a platba")
                        .cart-heading__title 2. Doprava a platba
                    .cart-heading__item
                        .cart-heading__icon
                            img(src="/icons/personal-data.svg" alt="3. Osobní údaje")
                        .cart-heading__title 3. Osobní údaje
                    .cart-heading__item
                        .cart-heading__icon
                            img(src="/icons/summary.svg" alt="4. Shrnutí objednávky")
                        .cart-heading__title 4. Shrnutí objednávky


            section.cart-content
                
                .container
                    .row 
                        .col-12.col-md-8
                            .cart-table
                                form.cart-content__form(method="post" id="cart-form")
                                    .cart-table__title Zboží v košíku

                                    .cart-table-items    

                                            .cart-item 
                                                .cart-item-thumb-wrap
                                                    .cart-item-thumb
                                                        img(src="/img/product-thumb-medium.jpg" alt="#" title="#")
                                                .cart-item-content 
                                                    .cart-item-main     
                                                        .cart-item-name Dřevěná bedna na 2 vína CARMEN VI
                                                            .cart-item-stock.--available #[img(src="/icons/check.svg" alt="Skladem 10 ks")]Skladem 10 ks
                                                        .cart-item-price-pc 520 Kč/ks
                                                        .cart-item-price 1 118 Kč

                                                    .cart-item-bottom
                                                        .cart-item-stepper.stepper 
                                                            span.minus –
                                                            input(id="qty-stepper-input-1" type="number" value="1" min="1" max="100" step="1" aria-label="Počet položek") 
                                                            span.plus +

                                                        a.cart-item-remove(href="#")   
                                                            .cart-item-remove-icon
                                                                img(src="/icons/cross-alt.svg" alt="Odstranit z košíku")
                                                            .cart-item-remove-text Odstranit z košíku


                                            .cart-item 
                                                .cart-item-thumb-wrap
                                                    .cart-item-thumb
                                                        img(src="/img/product-thumb-medium.jpg" alt="#" title="#")
                                                .cart-item-content 
                                                    .cart-item-main     
                                                        .cart-item-name Dřevěná bedna na 2 vína CARMEN VI
                                                            .cart-item-stock.--available #[img(src="/icons/check.svg" alt="Skladem 10 ks")]Skladem 10 ks
                                                        .cart-item-price-pc 520 Kč/ks
                                                        .cart-item-price 1 118 Kč

                                                    .cart-item-bottom
                                                        .cart-item-stepper.stepper
                                                            span.minus –
                                                            input(id="qty-stepper-input-2" type="number" value="1" min="1" max="100" step="1" aria-label="Počet položek") 
                                                            span.plus +

                                                        a.cart-item-remove(href="#")   
                                                            .cart-item-remove-icon
                                                                img(src="/icons/cross-alt.svg" alt="Odstranit z košíku")
                                                            .cart-item-remove-text Odstranit z košíku
                                    .cart-table__footer
                                        a.cart-table__footer-link(href="/") 
                                            .cart-table__footer-icon
                                                img(src="/icons/cheveron.svg" alt="Zpět do obchod")
                                            .cart-table__footer-text Zpět do obchodu

                                        a.cart-table__footer-link(href="#") 
                                            .cart-table__footer-icon
                                                img(src="/icons/cross-alt.svg" alt="Vyprázdnit košík")
                                            .cart-table__footer-text Vyprázdnit košík


                        .col-12.col-md-4 
                            aside.cart-aside
                                .cart-aside__title Shrnutí objednávky
                                .cart-aside__table 
                                    .cart-aside__row 
                                        .cart-aside__table-th Cena zboží
                                        .cart-aside__table-td 3 299 Kč
                                    .cart-aside__row 
                                        .cart-aside__table-th Doprava a platba
                                        .cart-aside__table-td Nevybráno
                                    .cart-aside__row.--main 
                                        .cart-aside__table-th Celková cena
                                        .cart-aside__table-td 3 354 Kč #[small 2 830 Kč bez DPH]


                                .cart-aside__free-shipping Nakupte ještě za 6 237 Kč a máte dopravu zdarma
                                .cart-aside__login 
                                    .cart-aside__login-icon 
                                        img(src="/icons/user.svg" alt="Už máte svůj účet?")
                                    .cart-aside__login-content 
                                        .cart-aside__login-title Už máte svůj účet?
                                        .cart-aside__login-text Zaregistrujte se, nebo se přihlaste pro jednodušší nákup.
                                form.cart-aside__code(method="post")
                                    .form-group 
                                        label(for="code") Mám slevový kód
                                        input(type="text" id="code" name="code" required)
                                        button.btn Použít
                                
                                button.btn.--cart(name="nextstep" form="cart-form") Doprava a platba #[img(src="/icons/cheveron-white.svg" alt="Pokračovat")]





            include components/_contact-section.pug


        
        include components/_footer.pug

        include template/_scripts.pug  